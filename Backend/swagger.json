{
  "swagger": "2.0",
  "info": {
    "description": "A system that helps EUCL users to get prepaid tokens",
    "title": "EUCL Token System",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "Verite Iradukunda",
      "email": "veriteiradukunda14@gmail.com"
    },
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "USER OPERATIONS",
      "description": "Operations on users"
    },
    {
      "name": "PURCHASED TOKEN OPERATIONS",
      "description": "Operations on candidates"
    }
  ],
  "security": [
    {
      "Bearer": []
    }
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "auth-token",
      "in": "header",
      "bearerFormat": "JWT",
      "scheme": "bearer"
    }
  },
  "paths": {
    "/users/login": {
      "post": {
        "tags": ["USER OPERATIONS"],
        "summary": "login",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "type": "object",
            "consumes": "application/json",
            "properties": {
              "email": {
                "type": "string",
                "required": "true"
              },
              "password": {
                "type": "string",
                "required": "true"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Invalid data"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/tokens/buy": {
      "post": {
        "tags": ["PURCHASED TOKEN OPERATIONS"],
        "summary": "BUY",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "type": "object",
            "consumes": "application/json",
            "properties": {
              "meter_number": {
                "type": "string",
                "required": "true"
              },
              "amount": {
                "type": "number",
                "required": "true"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Invalid data"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/register": {
      "post": {
        "tags": ["USER OPERATIONS"],
        "summary": "Register as an admin",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "type": "object",
            "consumes": "application/json",
            "properties": {
              "name": {
                "type": "string",
                "required": "true"
              },
              "email": {
                "type": "string",
                "required": "true"
              },
              "password": {
                "type": "string",
                "required": "true"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Invalid data"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
